    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-Wall",
                "-g",
                "${fileDirname}//*.c",
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
   
}